<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.D1" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MMLabelSplit">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">10.0dip</item>
        <item name="android:layout_height">10.0dip</item>
    </style>

    <style name="TitleBarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize"> 19.0dip </item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MMBriefText">
        <item name="android:textSize">@dimen/BasicTextSize</item>
        <item name="android:textColor">#ff707070</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#a0ffffff</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:lineSpacingExtra">2.0dip</item>
    </style>

    <style name="MMBody">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">18.0dip</item>
        <item name="android:paddingTop">26.0dip</item>
        <item name="android:paddingRight">18.0dip</item>
        <item name="android:paddingBottom">18.0dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="MMButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/mm_btn_text</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>

    <style name="MMLineButton" parent="@style/MMButton">
        <item name="android:textSize">@dimen/TitleTextSize</item>
        <item name="android:textColor">@color/mm_style_two_btn_text</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MMLineActionButton" parent="@style/MMLineButton">
        <item name="android:textColor">@color/mm_style_one_btn_text</item>
        <item name="android:background">@drawable/btn_style_one</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="MMEditText">
        <item name="android:textSize">@dimen/BasicTextSize</item>
        <item name="android:textColorHint">@color/lightgrey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">43.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="mmdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/mm_trans</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:background">@drawable/mm_trans</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="MMListCatalog">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/sc_bg_listitem_press</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearanceDialogWindowTitle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:textAppearance">@style/TextAppearanceDialogWindowTitle</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="AnimationDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="AliDialog">
        <item name="android:windowBackground">@drawable/popup_full</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialog</item>
        <item name="android:popupBackground">@drawable/popup_full</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="AliAlertDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
    </style>

    <style name="vertical_layout">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/domo_toolbar_bg</item>
    </style>

    <style name="horizontal_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/filemanagermenubg_w</item>
    </style>
    <!--  -->
    <style name="CustomWindowTitleBackground">
        <item name="android:background">@drawable/skin_blue</item>
    </style>

    <style name="CustomWindowTitleText">
        <item name="android:textSize">19dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="customCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>

    <style name="customListView" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarSize">10.0dip</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical</item>
        <item name="android:listSelector">@drawable/selector_list</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="customNoTitleBar" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">48.0dip</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitleText</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:checkboxStyle">@style/customCheckBox</item>
        <item name="android:listViewStyle">@style/customListView</item>
    </style>

    <style name="Default" parent="@style/customNoTitleBar">
        <item name="android:windowNoTitle">false</item>
    </style>

</resources>