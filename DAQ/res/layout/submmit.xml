<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@drawable/skin_blue"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/submmit_title"
            style="@style/TitleBarText"
            android:layout_gravity="center"
            android:paddingLeft="8dip"
            android:text="@string/scan_barcode" />

        <Button
            android:id="@+id/scan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/title_func"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="@string/take_the_barcode"
            android:textColor="@color/white" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:background="@drawable/blue_blank"
                        android:gravity="center"
                        android:text="@string/order_id"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/orderText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_blank"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:background="@drawable/white_blank"
                        android:gravity="center"
                        android:text="@string/customer"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/customerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_blank"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dip"
            android:layout_height="2dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_blank"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/code_add_et"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3.0dip"
                android:layout_weight="1"
                android:background="@drawable/search_bar_edit_bg"
                android:ems="10"
                android:hint="@string/please_enter_bcm_code"
                android:singleLine="true"
                android:textSize="13sp" >
            </EditText>

            <Button
                android:id="@+id/code_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="1.0dip"
                android:layout_marginLeft="3.0dip"
                android:layout_marginRight="3.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/add_code" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dip"
            android:layout_height="2dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="48dip"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_blank"
                android:gravity="center"
                android:text="#" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white_blank"
                android:gravity="center"
                android:text="@string/bcm_abbr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_blank"
                android:gravity="center"
                android:text="@string/amount" >
            </TextView>
        </LinearLayout>

        <ListView
            android:id="@+id/code_result"
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:background="@drawable/white_blank"
            android:divider="@drawable/reader_item_divider" >
        </ListView>

        <LinearLayout style="@style/MMLabelSplit" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip" >

            <Button
                android:id="@+id/Barcode_List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:text="@string/code_list"
                android:textColor="@color/mm_hyper_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/Product_Statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:text="@string/product_statistics"
                android:textColor="@color/mm_hyper_text" />
        </LinearLayout>

        <LinearLayout style="@style/MMLabelSplit" />

        <Button
            android:id="@+id/submmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/btn_style_one_normal"
            android:text="@string/finish"
            android:textColor="@color/white" />

        <LinearLayout style="@style/MMLabelSplit" />
    </LinearLayout>

</LinearLayout>