<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/typeTv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dip"
        android:background="@drawable/title_texture"
        android:gravity="center"
        android:text="出库\n入库"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="2dip"
        android:paddingTop="2dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/orderIdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:paddingLeft="5dip"
                android:text="20130814001"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/createTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:paddingLeft="5dip"
                android:text="2013-08-14\n09:56:55"
                android:textColor="@color/black_40_transparent"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderInfoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:text="TextView"
            android:textColor="@color/black_40_transparent"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/orderState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="5dip"
        android:text="已导出" />

</LinearLayout>